<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="LOGS" value="./logs"/>
    <timestamp key="startSec" datePattern="yyyyMMdd'T'HHmmss"/>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{ISO8601} %highlight(%-5level) [%blue(%t)] %magenta(%C{1}): %msg%n%throwable
            </Pattern>
        </encoder>
    </appender>
    <appender name="FileSpring" class="ch.qos.logback.core.FileAppender">
        <file>${LOGS}/springboot.log}</file>
        <encoder>
            <Pattern>%d{ISO8601} %logger{35} -%level -class: %C -method: %M -message: %msg%n</Pattern>
        </encoder>
    </appender>
    <appender name="FileMicrostest" class="ch.qos.logback.core.FileAppender">
        <file>${LOGS}/microstest.log}</file>
        <encoder>
            <Pattern>%d{ISO8601} %logger{35} -%level -class: %C -method: %M -message: %msg%n</Pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="Console"/>
        <appender-ref ref="FileSpring"/>
    </root>
    <logger name="ru.webrise.microstest.controller" level="debug">
        <appender-ref ref="FileMicrostest"/>
    </logger>
</configuration>